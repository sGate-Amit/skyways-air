<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Skyways Shipment Tracking</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
      background: #f4f4f4;
    }
    h1 {
      color: #0d3c61;
    }
    .container {
      background: #fff;
      padding: 20px;
      max-width: 600px;
      margin: auto;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    input, select, button {
      display: block;
      width: 100%;
      margin-bottom: 15px;
      padding: 10px;
      font-size: 16px;
    }
    .message {
      padding: 15px;
      border-radius: 5px;
      display: none;
      margin-top: 15px;
    }
    .success { background: #d4edda; color: #155724; }
    .warning { background: #fff3cd; color: #856404; }
    .error   { background: #f8d7da; color: #721c24; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Track your shipment</h1>
    <label for="mode">Mode:</label>
    <select id="mode">
      <option>Air</option>
      <option>Ocean</option>
    </select>

    <label for="trackingNumber">Enter 8-digit AWB number:</label>
    <input type="text" id="trackingNumber" maxlength="8" placeholder="Enter 8-digit number">

    <label for="carrier">Select Airline / Shipping Line:</label>
    <select id="carrier">
      <option>Carrier 1</option>
      <option>Carrier 2</option>
      <option>Carrier 3</option>
    </select>

    <button onclick="checkTracking()">Track Shipment</button>

    <div id="success" class="message success">Shipment found. Tracking is live!</div>
    <div id="warning" class="message warning">Tracking not active yet. Please try again in a couple of hours.</div>
    <div id="error" class="message error">Tracking number not found. Please check the number and try again.</div>
  </div>

  <script>
    function checkTracking() {
      const number = document.getElementById("trackingNumber").value.trim();
      document.querySelectorAll(".message").forEach(el => el.style.display = 'none');

      if (number === "12345678") {
        document.getElementById("success").style.display = "block";
      } else if (number === "00000000") {
        document.getElementById("warning").style.display = "block";
      } else {
        document.getElementById("error").style.display = "block";
      }
    }
  </script>
</body>
</html>

